[layout="win8"] .wrapper .grid::before
  content ''
  display block

[layout="win8"] .wrapper .grid.grid--1-1
  width calc(12.5% - 10px)

[layout="win8"] .wrapper .grid.grid--1-1::before
  padding-top calc(100% + 5px)

[layout="win8"] .wrapper .grid.grid--2-1
  width calc(25% - 10px)

[layout="win8"] .wrapper .grid.grid--2-1::before
  padding-top 50%

[layout="win8"] .wrapper .gridnth-of-type(8n+0)
  background #008299

[layout="win8"] .wrapper .gridnth-of-type(8n+1)
  background #2672ec

[layout="win8"] .wrapper .gridnth-of-type(8n+2)
  background #8c0095

[layout="win8"] .wrapper .gridnth-of-type(8n+3)
  background #5133ab

[layout="win8"] .wrapper .gridnth-of-type(8n+4)
  background #ac193d

[layout="win8"] .wrapper .gridnth-of-type(8n+5)
  background #d24726

[layout="win8"] .wrapper .gridnth-of-type(8n+6)
  background #008a00

[layout="win8"] .wrapper .gridnth-of-type(8n+7)
  background #094ab2

[layout="win8"] .wrapper .grid .thumb
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  padding 10px

[layout="win8"] .wrapper .grid .thumb .icon
  color #fff
  font-size 12rem
  position absolute
  top 10%
  left 50%
  margin-left -0.5em
  line-height 1

