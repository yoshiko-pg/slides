@import url(https://fonts.googleapis.com/css?family=Share);

#control
  color gray

linkColor = #EFC4DD

a
  color linkColor
  transition color .1s ease-in-out

[layout][invert],
[layout$='invert'],
[layout='code']
  a:link, a:visited, a:active
    color linkColor
  a:hover
    color lighten(linkColor, 50%)

#backface
  transition: none

strong
  color: red

[layout=code] .hljs-comment
  color #555

p > code,
li > code
  background: #f3f3f3
  border: 1px solid lightblue
  border-radius: 3px
  padding: 2px 5px
  font-size: .8em
  color: #333
[layout][invert],
[layout$=invert]
  code
    background: #555
    color: #fff
  strong
    color: lighten(red, 50%)

[layout=cover] h1
  font-family: Share,Futura,Helvetica,Arial,Hiragino Kaku Gothic ProN,Meiryo,sans-serif;

.wide-list
  margin-left 0
  margin-right 0

.yoshiko
  width 250px

.company-logo
  height 3rem
  vertical-align middle
  margin-left 3px

.book img
  height 55%
  margin -20px auto

.m0 > *
  margin-left: 0
  margin-right: 0

